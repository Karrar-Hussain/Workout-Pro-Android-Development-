<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView2"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" >

    <LinearLayout  android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fast.community.se.Profile"
    android:weightSum="1"
    android:orientation="vertical"
    >




    <view
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="android.support.design.widget.TextInputLayout"
        android:id="@+id/view1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_age"
            android:inputType="number"
            android:hint="Age"/>
    </view>

    <view
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="android.support.design.widget.TextInputLayout"
        android:id="@+id/view2"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/occu_type_spinner" />
    </view>

    <view
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="android.support.design.widget.TextInputLayout"
        android:id="@+id/view3"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/goal_type_spinner" />
    </view>

    <view
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="android.support.design.widget.TextInputLayout"
        android:id="@+id/view4"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="2"
            android:id="@+id/input_height"
            android:hint="Height"/>
    </view>

    <view
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="android.support.design.widget.TextInputLayout"
        android:id="@+id/view5"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="2"
            android:id="@+id/input_wieght"
            android:hint="Weight"/>
    </view>


    <view
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="android.support.design.widget.TextInputLayout"
        android:id="@+id/view6"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input_pay"
            android:hint="Salary"/>
    </view>

        <view
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="android.support.v7.widget.AppCompatButton"
            android:id="@+id/make_pro_button"
            android:layout_gravity="center_horizontal"
            android:padding="12dp"
            android:text="Update Profile"/>


    </LinearLayout>
</ScrollView>