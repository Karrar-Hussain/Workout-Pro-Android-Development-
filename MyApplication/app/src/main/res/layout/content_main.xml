<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:scrollbarAlwaysDrawVerticalTrack="true"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context=".view.BMIActivity"
android:paddingLeft="3dp">

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal"
    android:ems="5"
    android:id="@+id/txtHeightft"
    android:textSize="15sp"
    android:layout_above="@+id/textView3"
    android:layout_alignLeft="@+id/txtweightkg"
        android:text="0" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:text="Height"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:layout_marginTop="66dp"
    android:contextClickable="false"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<TextView
    android:id="@+id/textView3"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:text="Weight"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:layout_marginTop="20dp"
    android:contextClickable="false"
    android:layout_below="@+id/textView2"
    android:layout_alignParentLeft="true" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal"
    android:ems="5"
    android:id="@+id/txtweightkg"
    android:textSize="15sp"
    android:layout_alignBottom="@+id/textView3"
    android:layout_toRightOf="@+id/textView3"
    android:layout_toEndOf="@+id/textView3"
    android:text="0" />

<TextView
    android:id="@+id/viewBMI"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Your BMI "
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:layout_marginTop="24dp"
    android:layout_below="@+id/btnBMI"
    android:layout_alignRight="@+id/txtWeightlbs"
    android:layout_alignEnd="@+id/txtWeightlbs" />
<TextView
    android:id="@+id/viewCNPD"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Calorie Need Per day"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/textView13"
    android:layout_centerHorizontal="true" />

<Button
    android:id="@+id/btnBMI"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Calculate BMI"
    android:layout_below="@+id/textView3"
    android:layout_toRightOf="@+id/textView3"
    android:layout_toEndOf="@+id/textView3"
    android:layout_marginTop="36dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="feet"
    android:id="@+id/textView4"
    android:layout_alignTop="@+id/textView2"
    android:layout_toRightOf="@+id/txtHeightft" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="kg"
    android:id="@+id/textView5"
    android:layout_alignBottom="@+id/txtweightkg"
    android:layout_toRightOf="@+id/txtweightkg" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal"
    android:ems="5"
    android:id="@+id/txtHeightcm"
    android:textSize="15sp"
    android:layout_alignTop="@+id/txtHeightft"
    android:layout_toRightOf="@+id/textView4"
    android:layout_toEndOf="@+id/textView4"
    android:text="0" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="cm"
    android:id="@+id/textView6"
    android:layout_alignTop="@+id/textView4"
    android:layout_alignParentRight="true" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal"
    android:ems="5"
    android:id="@+id/txtWeightlbs"
    android:textSize="15sp"
    android:layout_alignBottom="@+id/textView3"
    android:layout_toRightOf="@+id/textView4"
    android:layout_toEndOf="@+id/textView4"
    android:text="0" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="lbs"
    android:id="@+id/viewlbs"
    android:layout_alignBottom="@+id/txtWeightlbs"
    android:layout_alignRight="@+id/textView6"
    android:layout_alignEnd="@+id/textView6" />
    <TextView
        style="@style/CodeFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Healthy Body Mass Index According to WHO is between 18.3 - 23.3"
        android:id="@+id/textView13"
        android:layout_below="@+id/viewBMI"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ideal Weight>"
        android:id="@+id/btnIW"
        android:layout_below="@+id/viewCNPD"
        android:layout_toEndOf="@+id/btnBMI"
        android:layout_toRightOf="@+id/btnBMI" />

</RelativeLayout>
        </LinearLayout>
    </ScrollView>
