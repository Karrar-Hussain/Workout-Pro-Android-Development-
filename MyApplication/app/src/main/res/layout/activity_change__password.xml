<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fast.community.se.Change_Password"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="56dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:weightSum="1">

    <TextView android:text="Change Password"
        android:layout_height="59dp"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView3" />

    <view
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        class="android.support.design.widget.TextInputLayout"
        android:id="@+id/view7"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
    <EditText android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Current Password"/>
    </view>

    <view
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        class="android.support.design.widget.TextInputLayout"
        android:id="@+id/view8"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <EditText android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="New Password"/>
    </view>

    <view
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        class="android.support.design.widget.TextInputLayout"
        android:id="@+id/view9"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <EditText android:id="@+id/cnfm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Confirm Password"/>
    </view>

    <view
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        class="android.support.v7.widget.AppCompatButton"
        android:id="@+id/change_pass_butt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:text="Change Password"/>


</LinearLayout>
</ScrollView>